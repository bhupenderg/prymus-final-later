<body>

    <% if (user) { %>
        <%- include ('../includes/header_updated_s.ejs') %>     
    <% } else { %>
        <%- include ('../includes/header_updated_n.ejs') %>
    <% } %>
    <!-- container-1 register/login -->
    <div class="container-1">
        <div class="sign-up">
            <h1>Register Here!</h1>
            <div class="form-container-register">
                <form action="/registerclient" method="POST" class="client-register" id="client-register">
                    <input type="text" name="name" id="register-name" class="registerField" placeholder="Name">
                    <input type="text" name="email" id="register-email" class="registerField" placeholder="Email">
                    <input type="password" name="password" id="register-password" class="registerField" placeholder="Password">
                    <input type="password" name="passwordConfirm" id="register-password-confirm" class="registerField" placeholder="Password-confirm">
                    <input type="tel" name="phone" id="register-phone" class="registerField" placeholder="Phone No.">
                    <input type="text" name="city" id="register-city" class="registerField" placeholder="City">
                    <input type="text" name="state" id="register-state" class="registerField" placeholder="state">
                    <input type="number" name="pincode" id="register-pincode" class="registerField" placeholder="Pin">
                    <input type="text" name="country" id="register-country" class="registerField" placeholder="Country">
                    <input type="submit" name="register" value="Register">
                </form>
            </div>

            
        </div>
        <div class="sign-in">
            <h1>Login Here!</h1>
            <div class="form-container-login">
                <form action="myaccount" method="POST" class="client-login">
                    <input type="text" name="email" class="register-email" placeholder="Email">
                    <input type="password" name="password" class="register-password" placeholder="Password">
                    <input type="submit" name="login" value="Login">
                    
                </form>
            </div>

           
        </div>
    </div>
    <!-- footer starts -->
    <%- include('../footer.ejs') %>


